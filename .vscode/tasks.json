{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                //"-g",  // Uncomment for debugging
                "-O2",
                "-std=c++17",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/GLbuffers.cpp",
                "${workspaceFolder}/src/Renderer.cpp",
                "${workspaceFolder}/src/shader.cpp",
                "${workspaceFolder}/src/textures.cpp", 
                "${workspaceFolder}/src/vendor/stb_image.cpp",
                "${workspaceFolder}/src/vendor/glad.c",
                "-lglfw3",  // Link against static GLFW library
                "-lopengl32",  // Required for OpenGL on Windows
                "-lgdi32",  // Required for GLFW on Windows
                "-DGLFW_STATIC",  // Define for static linking
                "-o",
                "${workspaceFolder}/bin/cutable.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: C:/msys64/ucrt64/bin/g++.exe"
        }
    ]
}